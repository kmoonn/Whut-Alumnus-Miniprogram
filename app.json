        "pages/apply/apply",
        "pages/check/check",
        "pages/famous/famous",
        "pages/famous_detail/famous_detail"
      ]
    },
    {
      "root": "service",
      "pages": [
        "pages/activity/activity",
        "pages/activityDetail/activityDetail",
        "pages/nearby/nearby",
        "pages/search/search",
        "pages/visual/visual",
        "pages/company/company",
        "pages/companyDetail/companyDetail"
      ]
    }
