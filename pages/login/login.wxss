/* 整体容器 */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  position: relative;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 背景图 */
.background-image {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}

/* Logo容器 */
.logo-container {
  margin: 60rpx 0 30rpx;
  text-align: center;
}

.logo {
  width: 500rpx;
  height: auto;
  margin-bottom: 0rpx;
}


/* 登录卡片 */
.login-card {
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10px);
}

/* 切换标签 */
.tab-container {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
  border-bottom: 2rpx solid #eee;
}

.tab {
  position: relative;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tab.active {
  color: #007aff;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: #007aff;
  border-radius: 4rpx;
}

/* 表单容器 */
.form-container {
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
  display: none;
}

.form-container.show {
  opacity: 1;
  transform: translateY(0);
  display: block;
}

/* 输入框容器 */
.input-container {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.input-field {
  width: 90%;
  height: 88rpx;
  padding: 0 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fff;
  transition: all 0.3s ease;
}

.input-field:focus {
  border-color: #007aff;
  box-shadow: 0 0 0 2rpx rgba(0, 122, 255, 0.1);
}

/* 图标 */
.icon {
  margin-right: 10rpx;
  color: #007aff;
}

/* 协议部分 */
.agreement {
  margin: 30rpx 0;
  font-size: 24rpx;
  color: #666;
}

checkbox .wx-checkbox-input {
  width: 28rpx;
  height: 28rpx;
  border-radius: 6rpx;
}

.link {
  color: #007aff;
  text-decoration: none;
}

/* 按钮 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #007aff, #1f74e4);
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  transition: all 0.3s ease;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.button-hover {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  opacity: 0.9;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.show {
  animation: fadeIn 0.3s ease forwards;
}

/* 自定义协议弹窗样式 */
.wx-modal-content {
  font-size: 24rpx !important;
  line-height: 1.4 !important;
}

.wx-modal-title {
  font-size: 28rpx !important;
  font-weight: 500 !important;
}
